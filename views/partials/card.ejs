<div class="card shadow-sm mb-4">
  <div class="card-body">
    <div class="d-flex justify-content-between">
      <h5 class="card-title"><%=message.title %></h5>
      <% if(currentUser && currentUser.is_admin) { %>
      <button class="btn btn-sm btn-danger">Trash</button>
      <% } %>
    </div>
    <% if(currentUser && currentUser.is_member) { %>
    <p class="mb-0">By <%= message.author.username %></p>
    <p><%= message.date_formatted %></p>
    <%}%>
    <p class="card-text"><%=message.message %></p>
    <% if(!currentUser || !currentUser.is_member){ %>
    <div class="border-top">
      <p class="mt-3 mb-0">
        <strong>Note:</strong> Become a member to know who wrote this message
        and when.
      </p>
    </div>
    <% } %>
  </div>
</div>
